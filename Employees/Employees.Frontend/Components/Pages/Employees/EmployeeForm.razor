<EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudTextField Label="Nombre"
                  @bind-Value="@Employee.Name"
                  For="@(() => Employee.Name)"
                  Class="mb-4" />
    <MudTextField Label="Apellido"
                  @bind-Value="@Employee.LastName"
                  For="@(() => Employee.LastName)"
                  Class="mb-4" />
    <MudTextField Label="Estado"
                  @bind-Value="@Employee.isActive"
                  For="@(() => Employee.isActive)"
                  Class="mb-4" />
    <MudTextField Label="Fecha de contratacion"
                  @bind-Value="@Employee.HireDate"
                  For="@(() => Employee.HireDate)"
                  Class="mb-4" />
    <MudTextField Label="Salario"
                  @bind-Value="@Employee.Salary"
                  For="@(() => Employee.Salary)"
                  Class="mb-4" />

    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.ArrowBack"
               Color="Color.Info"
               OnClick="ReturnAction">
        <MudHidden xs="true">
            Cancelar
        </MudHidden>
    </MudButton>

    <MudButton Variant="Variant.Outlined"
               StartIcon="@Icons.Material.Filled.Check"
               Color="Color.Primary"
               ButtonType="ButtonType.Submit">
        <MudHidden xs="true">
            Guardar Cambios
        </MudHidden>
    </MudButton>
</EditForm>


